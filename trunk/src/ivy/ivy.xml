<?xml version="1.0" encoding="ISO-8859-1"?>

<!-- $Id$ -->
<ivy-module version="1.0">

    <info organisation="org.jsimpledb" module="jsimpledb">
        <license name="Apache License, Version 2.0" url="http://www.apache.org/licenses/LICENSE-2.0"/>
        <description homepage="http://jsimpledb.googlecode.com/"/>
    </info>

    <configurations>
        <conf name="javac" transitive="false" description="JARs required for javac"/>
        <conf name="build" extends="javac" description="JARs required for other build-time steps"/>
        <conf name="jarjars" transitive="false" description="JAR(s) to embed into our JAR"/>
        <conf name="test" extends="build" description="JARs required during testing"/>
    </configurations>

    <dependencies>
        <dependency force="true" org="com.google.guava" name="guava" rev="17.0" conf="javac->default"/>
        <dependency force="true" org="com.mysql" name="mysql-connector-java" rev="5.1+" conf="javac,test-&gt;default"/>
        <dependency force="true" org="com.tonicsystems" name="jarjar" rev="1.4" conf="build->default"/>
        <dependency force="true" org="com.foundationdb" name="fdb-java" rev="2.+" conf="javac,test->default"/>
        <dependency force="true" org="javax.servlet" name="servletapi" rev="3.0" conf="javac->default"/>
        <dependency force="true" org="javax.validation" name="validation-api" rev="1.0.0.GA" conf="javac->default"/>
        <dependency force="true" org="org.apache.commons" name="commons-logging" rev="1.1+" conf="javac->default"/>
        <dependency force="true" org="org.dellroad" name="dellroad-stuff" rev="1.0.850" conf="javac->default; jarjars->default"/>
        <dependency force="true" org="org.objectweb.asm" name="asm" rev="4.+" conf="javac,build->default; jarjars->core,util"/>
        <dependency force="true" org="org.slf4j" name="slf4j" rev="1.7.2" conf="javac->default;test->log4j"/>
        <dependency force="true" org="org.sonatype.jline" name="jline" rev="2.11" conf="javac->default; jarjars->default"/>
        <dependency force="true" org="org.springframework" name="spring" rev="4.0.3"
          conf="javac->aop,aspects,beans,context,tx"/>
        <dependency force="true" org="org.testng" name="testng" rev="6.8+" conf="test->default"/>
    </dependencies>

</ivy-module>
